<Window x:Class="DevModManager.App.MissingConfigDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Missing Configuration File" Height="200" Width="400">
    <StackPanel>
        <TextBlock Text="The configuration file is missing. What would you like to do?" HorizontalAlignment="Center" Margin="10,25"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Copy Sample" Width="100" Margin="5" Click="CopySample_Click"/>
            <Button Content="Settings Window" Width="100" Margin="5" Click="SettingsWindow_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Exit" Width="100" Margin="5" Click="Exit_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
